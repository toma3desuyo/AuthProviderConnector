# Application
ENVIRONMENT=development
AUTH_PROVIDER_CONNECTOR_API_URL=http://localhost:8000
CLIENT_APP_URL=your-client-app-url
LOGOUT_RETURN_URL=your-client-app-url/backend/api/v1/auth/logout/callback

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=authconnector
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DB_USE_NULL_POOL=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_CONNECTION_TIMEOUT=5
DB_PREPARED_STATEMENT_CACHE_SIZE=0
DB_ECHO=false
DB_POOL_PRE_PING=false

# Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=your-audience
AUTH0_ALGORITHM=RS256

# Internal JWT
ACCESS_TOKEN_SECRET_KEY=change-me-access
REFRESH_TOKEN_SECRET_KEY=change-me-refresh
INTERNAL_JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRATION_MINUTES=15
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Session
SESSION_SECRET_KEY=change-me-session
